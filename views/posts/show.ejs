<%- include('../partials/header') %>

<section id="show-page">
    <div>Title:</div>
    <div><%= post.title %></div>
    <div><%= post.postContent %></div>
    <% if (user) { %>
        <form action="/posts/<%= post.id %>?_method=DELETE"
            class="delete-form" method="POST">
            <button type="submit">Delete Post</button>
        </form>
        <form action="/posts/<%= post.id %>?_method=PUT"
            class="Edit-form" method="PUT">
            <button type="submit">Edit Post</button>
        </form>
    <% } %>
</section>

<br><br><h2>Comments</h2>
<% if (user) { %>
  <form id="add-comment-form" method="POST"
    action="/comments/posts/<%= post._id %>/comments">
    <label>Comment:</label>
    <textarea name="content"></textarea>
    <input type="submit" value="Add Comment">
  </form>
<% } %>

<% if (post.comments.length) { %>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
          <th>Comment</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% post.comments.forEach(function(r) { %>
          <%= r.content %>
          <%= r.createdAt %>
        <% }); %>
        <tr>
          <td colspan="2"></td>
          <td>
            <strong>
              <%= (total / post.comments.length).toFixed(1) %>
            </strong>
          </td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Comments Yet</h5>
  <% } %>


<%- include('../partials/footer') %>